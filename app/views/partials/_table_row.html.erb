<% values = table.value_datas_listable(record_index) %>

<% if not values.empty? %>
  <% @records_size += 1 %>
  <tr>
    <% table.fields.listable.each_with_index do | field, index | %>
      <%= render partial: 'partials/table_cell', locals: {table:, record_index:, field:, is_link: (index == 0), value: values[index] } %>
    <% end %>

    <td>
      il y a <%= time_ago_in_words(table.last_update_at(record_index)) %>
    </td>

      <td class="d-flex justify-content-end gap-3">
      <% if policy(table).show_details? %>
        <%= link_to "Voir", details_path(table.slug, record_index:), title: 'Voir les dÃ©tails de cette ligne', class: 'btn btn-outline-primary btn-sm', 'data-testid': "Voir ligne nÂ°#{record_index}", data: { turbo_frame: "_top" } %>
      <% end %>
      <% if policy(table).fill? %>
        <%= link_to "Modifier", fill_url(table.slug, record_index:), title: 'Modifier les valeurs de cette ligne', class: 'btn btn-outline-warning btn-sm', 'data-testid': "Modifier ligne nÂ°#{record_index}", data: { turbo_frame: "_top" } %>
