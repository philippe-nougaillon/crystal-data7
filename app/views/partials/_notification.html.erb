<% if notice || alert %>
  <div id="notification" class="px-2 mb-4 mb-sm-0" data-controller="notification" data-notification-delay-value="<%= user_signed_in? && current_user.sign_in_count < 5 ? '25000' : '5000' %>" data-transition-enter-from="opacity-0 translate-middle-x" data-transition-enter-to="opacity-100 translate-x-0" data-transition-leave-from="opacity-100 translate-x-0" data-transition-leave-to="opacity-0 translate-middle-x">
    <div id="notification-block">
      <div id="notification-contents">
        <% if notice %>
          <svg class="text-success" xmlns="http://www.w3.org/2000/svg" fill="none" viewBow="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% else %>
          <svg class="text-danger" xmlns="http://www.w3.org/2000/svg" fill="none" viewBow="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"></path>
          </svg>
        <% end %>
        <div id="notification-content">
          <p><%= notice || alert %></p>
        </div>
        <div id="notification-close">
          <button data-action="notification#hide">
            <span>Close</span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
