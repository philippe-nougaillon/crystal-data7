  <div id="notification" class="px-2 mb-4 mb-sm-0" data-controller="notification" data-notification-delay-value="<%= user_signed_in? && current_user.compte_dÃ©mo? ? '15000' : '5000' %>" data-transition-enter-from="opacity-0 translate-middle-x" data-transition-enter-to="opacity-100 translate-x-0" data-transition-leave-from="opacity-100 translate-x-0" data-transition-leave-to="opacity-0 translate-middle-x">
