              <span class="material-symbols-outlined" style="letter-spacing: -12px;">
                language language_french
              </span>
            <% end %>
          <% else %>
            <%= link_to url_for(request.params.merge(locale: 'fr')), title: t('navbar.switch_language_title') do %>
