<h1 class="text-primary mb-4">
	Liste des partages de '<%= @table.name.humanize %>'
</h1>

<div class="overflow-x-auto">
  <table class="table table-striped table-hover table-bordered table-responsive">
		<thead>
			<tr>
				<th>Nom utilisateur</th>
				<th>Adresse mail</th>
				<th>Rôle</th><th />
			</tr>
		</thead>

		<% @table.users.each do |user| %>
			<tr>
				<td><b><%= user.name %></b></td>
				<td><%= user.email %></td>
				<td><%= @table.role(user).humanize %></td>
				<td>
					<% unless @table.users[0] == user %>
						<%= link_to "Annuler le partage", annuler_partage_path(@table, user_id:user.id), title:"Annuler ce partage", 
							data: { confirm: 'Vraiment ??' }, class: 'btn btn-outline-danger btn-sm' %>
					<% end %>
				</td>
			</tr>
		<% end %>
  </table>
</div>
<i><small>Seul les utilisateurs propriétaires peuvent modifier la structure de la table</small></i>
<br><br>

<% if @table.propriétaire?(@current_user) %>
  	<%= link_to add_user_path(@table), title:"Ajouter un partage avec un autre utilisateur", class:'btn btn-outline-success' do %>
  		Ajouter un partage
  	<% end %>
<% end %>