<%= form_for(@table) do |f| %>

  <%= f.label :name, "Nom du nouveau Type d'Objet" %>
  <%= f.text_field :name, required: true, 
                    placeholder: 'Ex: Article, Intervention, Technicien, Chantier...', 
                    autofocus: true, 
                    class: 'form-control mb-4 w-25' %>

  <div class="mb-4">
    <%= f.check_box :lifo %>
    <%= f.label :lifo, "Trier ?" %>
    <div id="lifo" class="form-text">
      Trier la collection par date de modification (le dernier objet modifié apparaît en haut de la liste)
    </div>
  </div>

  <div class="mb-4">
    <%= f.check_box :notification %>
    <%= f.label :notification, "Notification ?" %>
    <div class="form-text">
      Si vous voulez être notifié à chaque ajout d'un nouvel objet dans la collection
    </div>
  </div>

  <%= f.submit @table.new_record? ? "Continuer" : "Modifier cet objet", class: 'btn btn-outline-primary' %>
<% end %>
