<%= turbo_frame_tag "main_frame" do %>
  <h1 class="text-primary">
    Audit Trail
  </h1>

  <% if params[:record_index].blank? %>
    <%= form_tag(request.path, method: :get, class: 'd-flex mb-4 gap-4 align-items-center') do %>

      <%= label_tag "Utilisateur" %>
      <%= select_tag :user_id, options_from_collection_for_select(@table.users, "id", "name", params[:user_id]), include_blank:true, onchange: 'this.form.submit()', class:'form-select' %>

      <%= submit_tag 'Filtrer', class: 'btn btn-outline-primary' %>
    <% end %>
  <% end %>

  <div class="overflow-x-auto">
    <table class="table table-hover table-bordered sticky">
      <thead>
        <tr>
          <th>Le</th>
          <th>Qui</th>
          <th>IP</th>
          <th>Action</th>
          <th>Ligne</th>
          <th>Attribut</th>
          <th>Valeur</th>
          <th>Remplace</th>
        </tr>
      </thead>

      <tbody>
        <% @audits.includes(:user).each do | log | %>
          <tr>
            <% field = Field.find(log.audited_changes['field_id']) %>
            <% record_index = log.audited_changes['record_index'] %>
            <% value = log.audited_changes['data'] %>
            <% old_value = log.audited_changes['old_value'] %>
            <td><%= "#{ l log.created_at } (il y a #{ time_ago_in_words(log.created_at) })" %></td>
            <td><%= log.user.name.humanize if log.user %></td>
            <td><%= log.remote_address %></td>
            <td><%= log.audited_changes['old_value'] ? 'Modification' : 'CrÃ©ation' %>
            <td><%= record_index %></td>
            <td><%= field.name %></td>
            <td>
              <% if field.Table? %>
                <%= field.get_linked_table_record(value.to_i) %>
              <% else %>
                <%= value %>
              <% end %>
            </td>
            <td>
              <% if field.Table? %>
                <%= field.get_linked_table_record(old_value.to_i) %>
              <% else %>
                <%= old_value %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <%= will_paginate @audits, renderer: BootstrapPagination::Rails %>

  <%= @audits.size.to_s + " modification".pluralize(@audits.size) %>

<% end %>