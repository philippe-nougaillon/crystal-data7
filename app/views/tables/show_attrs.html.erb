<div class="my-4">
  <h1 class="text-secondary">
    <span class="fa fa-gears"></span>
    Attributs de l'Objet '<%= @table.name.humanize %>'
  </h1>

  <div class="float-end mt-3">
    <%= link_to "Voir la Collection", @field.table, title: "Voir la Collection d'Objets" %> 
  </div>
</div>

