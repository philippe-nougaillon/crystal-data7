<% if @table.fields.any? %>
	<div class="overflow-x-auto">
		<table class="table table-hover">
			<thead>
				<tr>
					<th class="col-md-1">#</th>
					<th>Nom de l'attribut</th>
					<th>Type</th>
					<th>Options</th>
					<th>Visibilit√©</th>
					<th></th>
				</tr>
			</thead>
			<% @table.fields.ordered.each_with_index do | field, index | %>
				<%= render partial:'fields/field', locals: {field:field, i:index} %>
			<% end %>
		</table>
	</div>
<% end %>
<br>

<h3 class="mb-4">Ajouter un nouvel attribut</h3>

<% if @field %>	
	<%= render partial:'fields/form' %>
<% end %>
