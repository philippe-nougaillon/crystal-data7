<tr id="<%= dom_id user %>" class="hover">
  <td class="fw-bold">
    <%= user.name %>
  </td>
  <td><%= user.role.upcase %></td>
  <td><%= user.email %></td>
  <td>
    <% if policy(user).edit? || current_user.compte_démo? %>
      <%= link_to t('scaffold.update'), edit_user_path(user), title: t('users.update_title', user: user.name), class: 'btn btn-outline-warning btn-sm me-2' %>
    <% end %>
    <% if policy(user).destroy? || current_user.compte_démo? %>
      <%= link_to t('scaffold.destroy'), user, title: t('users.destroy_title', user: user.name), 'data-turbo-method': :delete, 'data-turbo-confirm': "Êtes-vous certain.e de vouloir supprimer l'utilisateur '#{user.name}' ?", class: 'btn btn-outline-danger btn-sm' %>
    <% end %>
  </td>
</tr>
