<br>
<div class="col-sm-offset-1">
	<h2>Créer un compte</h2>
</div>	
<br><br>

<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>

	<% if @user.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

	      <ul>
	      <% @user.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	<% end %>
   
 	<div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-2">
	  		<%= f.text_field :name, required: true, class: 'form-control', placeholder: 'Nom ou Pseudo' %>
	    </div>
	</div>
    <div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-3">
		    <%= f.text_field :email, required:true, class: 'form-control', placeholder: "Adresse mail"  %>
	    </div>
	</div>  
	<div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-2">
		    <%= f.password_field :password, required:true, class: 'form-control', placeholder: 'Mot de passe' %>
	    </div>
	</div>  
	<div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-2">
	    	<%= f.password_field :password_confirmation, class: 'form-control', placeholder:  'Confirmation'  %>
	    </div>
	</div>
	<br>
	
	<div class="actions form-group">
    	<div class="col-sm-offset-1 col-sm-10">
	    	<%= f.submit "Créer ce compte", class: 'btn btn-outline-success' %> | 
			<%= link_to "Annuler", login_path %>
  		</div>
	</div>

<% end %>
