<h1 class="text-primary mb-4">
  <%= @user.name %>
</h1>

<h2>Activité du compte</h2>

<div class="d-flex flex-wrap gap-2 mb-4">
  <p>Nombre de tables créées: <span class="badge text-bg-primary"><%= @total_tables %></span> </p>
  <p>Nombre total d'enregistrements: <span class="badge text-bg-primary"><%= @total_lignes %> lignes</span></p>
  <p>Fichiers sauvegardés: <span class="badge text-bg-primary"><%= @fichiers %></span></p>
  <%
=begin%>
 Espace de stockage utilisé: <span class="badge text-bg-primary"><%= @total_fichiers.round(2) %> MB</span> 
<%
=end%>
</div>

<div class="mb-4">
  <h2>Informations personnelles</h2>  
  <i>Utilisateur depuis <%= time_ago_in_words(@user.created_at) %></i><br>
  <i>Ce compte a été modifié il y a <%= time_ago_in_words(@user.updated_at) %></i>
</div>

<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <div class="col-sm-3">
      <%= f.label 'Nom' %>
      <%= f.text_field :name, required:true, class: 'form-control' %>
    </div>
  </div>
  <div class="mb-4">
    <div class="col-sm-3">
      <%= f.label 'Adresse mail' %>
      <%= f.text_field :email, required:true, class: 'form-control' %>
    </div>
  </div> 

  <% unless current_user.id == 1 %>
    <div class="col-sm-2">
      <%= f.label :password, 'Mot de passe' %>
      <%= f.password_field :password, required:true, class: 'form-control mb-4', placeholder:'Mot de passe' %>
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder:'Confirmation' %>
    </div>
  <% end %>
  <br>

  <div>
    <div class="col-sm-10">
      <%= f.submit "Modifier", class: 'btn btn-outline-primary' %>
    </div>
  </div>

<% end %>

<div class="my-4">
  <h2>Tables partagées</h2>
  <% tables_user = TablesUser.where(user_id: current_user.id).where.not(role: 'Propriétaire') %>
  <table class="table table striped table-sm table-hover">
    <thead>
      <th>Table</th>
      <th>Role</th>
    </thead>
    <tbody>
      <% tables_user.each do |table_user| %>
        <tr>
          <td><%= table_user.table.name %></td>
          <td><%= table_user.role %></td>
        </tr>
      <% end %>
    </tbody>
</div>