<div class="d-flex flex-end align-items-center justify-content-between flex-wrap mb-4 ">
  <h1 class="text-secondary">
    <%= @user.name %>
  </h1>
  <%= button_to destroy_user_session_path, method: :delete, class:'btn btn-outline-danger', 'data-turbo': false, title: 'Se déconnecter' do %>
    Se déconnecter
  <% end %>
</div>

<div class="w-sm-50">
  <h3>Les objets partagés avec vous</h3>
  <table class="table table striped table-sm table-hover">
    <thead>
      <th>Objet</th>
      <th>Rôle</th>
    </thead>
    <tbody>
      <% @tables_users.each do |table_user| %>
        <tr>
          <td><%= table_user.table.name %></td>
          <td><%= table_user.role %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="my-5">
  <h3>Activité du compte</h3>

  <div class="mb-4">
    <p>Nombre d'objets créés : <span class="badge bg-secondary"><%= @total_tables %></span></p>
    <p>Nombre total d'objets dans vos collections : <span class="badge bg-secondary"><%= @total_lignes %></span></p>
  </div>
</div>

<div class="mb-4">
  <h3>Informations personnelles</h3>  
  <i>Utilisateur depuis <%= time_ago_in_words(@user.created_at) %></i><br>
</div>

<% form_for @user do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <div class="col-sm-3">
      <%= f.label 'Nom' %>
      <%= f.text_field :name, required:true, class: 'form-control' %>
    </div>
  </div>
  
  <div class="mb-4">
    <div class="col-sm-3">
      <%= f.label 'Adresse mail' %>
      <%= f.text_field :email, required:true, class: 'form-control', type: :email %>
    </div>
  </div> 

  <% unless current_user.id == 1 %>
    <div class="col-sm-2">
      <%= f.label :password, 'Mot de passe' %>
      <%= f.password_field :password, required:true, class: 'form-control', placeholder:'Mot de passe' %>
      <%= f.label :password_confirmation, 'Confirmation' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder:'Confirmation' %>
    </div>
  <% end %>

  <div>
    <div class="col-sm-10">
      <%= f.submit "Modifier", class: 'btn btn-outline-secondary' %>
    </div>
  </div>

<% end %>
