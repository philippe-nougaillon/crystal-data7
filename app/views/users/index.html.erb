<div class="my-4 d-flex align-items-center text-dark gap-2">
  <h1 class="mb-0">
    <%= t('misc.users') %>
  </h1>
</div>

<div class="overflow-x-auto">
  <table class="table table-hover w-100 border align-middle">
    <thead>
      <tr class="table-light">
        <th></th>
        <th><%= t('scaffold.name') %></th>
        <th><%= t('misc.role') %></th>
        <th><%= t('misc.email') %></th>
        <th><%= t('misc.team') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render @users %>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <%= link_to admin_create_new_user_path, class: 'btn btn-outline-primary me-2' do %>
    <%= t('users.new') %>
  <% end %>
</div>

<div class="mt-5 mb-4 d-flex align-items-center text-dark gap-2">
  <h1 class="mb-0">
    <%= t('misc.teams') %>
  </h1>
</div>

<div class="overflow-x-auto">
  <table class="table table-hover w-100 border align-middle">
    <thead>
      <tr class="table-light">
        <th><%= t('scaffold.name') %></th>
        <th><%= t('misc.users') %></th>
        <th><%= t('filters.filters') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <%= render partial: "partials/team", locals: {team:} %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-3">
  <%= link_to admin_new_team_path, class: 'btn btn-outline-primary me-2' do %>
    <%= t('teams.new') %>
  <% end %>
</div>