<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, t('users.name_pseudo'), class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control w-50', required: true, autofocus: true %>
  </div>

  <div class="mb-4">
    <%= f.label :email, t('misc.email'), class: 'form-label' %>
    <%= f.text_field :email, class: 'form-control w-50', required: true %>
  </div>

  <div class="my-4">
    <%= f.label :role, t('misc.role') %>
    <%= f.select :role, options_for_select(User.roles.keys, @user.role), {}, class: 'form-select' %>
  </div>

  <div class="my-4">
    <%= f.label :team_id, t('misc.team') %>
    <%= f.select :team_id, options_from_collection_for_select(current_user.organisation.teams, :id, :name, @user.team_id), {include_blank: true}, class: 'form-select' %>
    <p class="form-text">
      <%= t('users.team_hint') %>
    </p>
  </div>

  <%= f.submit t('scaffold.save'), class: 'btn btn-outline-success mt-4' %>
<% end %>
