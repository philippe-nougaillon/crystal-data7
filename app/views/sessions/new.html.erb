<br>
<div class="col-sm-offset-1">
	<h2>
		Bienvenue !
	</h2>
</div>
<br>

<%= form_for :user, url:'/login', html: {class: 'form-horizontal'} do |f| %>

    <div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-3">
		    <%= f.text_field :email, required: true, class: 'form-control', placeholder:'Adresse mail' %>
	    </div>
	</div>  
	<div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-3">
		    <%= f.password_field :password, required: true, class: 'form-control', placeholder:'Mot de passe' %>
	    </div>
	</div>

	<div class="field form-group">
		<div class="col-sm-offset-1 col-sm-3">
			<%= f.check_box :remember_me %> Maintenir la connexion ?
		</div>
	</div>
	<br>

	<div class="actions form-group">
    	<div class="col-sm-offset-1 col-sm-10">
		    <%= f.submit "S'identifier", class: 'btn btn-success' %>
			| 
			<%= link_to "Créer un compte", signup_path %> 
		</div>
	</div>

<% end %>
<br>

<div class="col-sm-offset-1">
	<%= link_to "Se connecter en tant qu'invité (mode démonstration)", demo_path, class: 'btn btn-outline-dark' %>
</div>


