<%= form_for :user, url:'/login', html: {class: 'form-horizontal'} do |f| %>
    <div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-3">
		    <%= f.text_field :email, required:true, class: 'form-control', placeholder:'Adresse mail' %>
	    </div>
	</div>  
	<div class="field form-group">
	    <div class="col-sm-offset-1 col-sm-3">
		    <%= f.password_field :password, required:true, class: 'form-control', placeholder:'Mot de passe' %>
	    </div>
	</div>

	<div class="field form-group">
		<div class="col-sm-offset-1 col-sm-3">
			<%= f.check_box :remember_me %> Maintenir la connexion ?
		</div>
	</div>
	<br>

	<div class="actions form-group">
    	<div class="col-sm-offset-1 col-sm-10">
		    <%= f.submit "S'identifier", class: 'btn btn-block btn-lg btn-outline-success' %>
		</div>
	</div>
<% end %>
