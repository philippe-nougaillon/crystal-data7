<div class="d-flex justify-content-center w-100 mt-5">
  <div class="card p-5">
    <h1 class="text-primary mb-4">S'inscrire</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="w-100" style="gap: 1rem">
        <div>
          <%= f.label :name, "Nom ou Pseudo" %>
          <%= f.text_field :name, required: true, class: 'form-control w-100' %>
        </div>
        <div>
          <%= f.label :email, "Adresse email" %>
          <%= f.text_field :email, required:true, class: 'form-control w-100', type: :email %>
        </div>
        <div>
          <%= f.label :password, "Mot de passe" %>
          <%= f.password_field :password, required:true, class: 'form-control w-100', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div>
          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation, class: 'form-control w-100' %>
        </div>
        <div class="col-sm-offset-1 col-sm-3 mt-4 w-100" style="gap: 1rem">
          <%= f.submit "CrÃ©er le compte", class: 'btn btn-outline-primary' %>
          <%= link_to "Annuler", unauthenticated_root_path, class:'btn btn-outline-dark' %>
        </div>
      </div>
    <% end %>
  </div>
</div>