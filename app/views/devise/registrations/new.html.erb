<h1 class="text-primary mb-4">Créer un compte</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.messages.not_saved', count: @user.errors.count) %></h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex flex-column"style="gap: 1rem">
  <div class="col-sm-offset-1 col-sm-3">
    <%= f.label :name, "Nom ou Pseudo" %>
    <%= f.text_field :name, required: true, class: 'form-control w-100' %>
  </div>
  <div class="col-sm-offset-1 col-sm-3">
    <%= f.label :email, "Adresse email" %>
    <%= f.text_field :email, required:true, class: 'form-control w-100' %>
  </div>
  <div class="col-sm-offset-1 col-sm-3">
    <%= f.label :password, "Mot de passe" %>
    <%= f.password_field :password, required:true, class: 'form-control w-100', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  </div>
  <div class="col-sm-offset-1 col-sm-3">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: 'form-control w-100' %>
  </div>
  <div class="col-sm-offset-1 col-sm-3 mt-4" style="gap: 1rem">
    <%= f.submit "Créer mon compte", class: 'btn btn-outline-success' %>
    <%= link_to "Retour", root_path, class:'btn btn-outline-dark' %>
  </div>
<% end %>
