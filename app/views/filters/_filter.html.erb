<tr id="<%= dom_id filter %>">
  <td><%= link_to filter.name, query_filter_path(filter), class: 'text-primary' %></td>
  <td><%= filter.table.name.pluralize %></td>
  <td><%= filter.query_humanized %></td>
  <td>il y a <%= time_ago_in_words(filter.updated_at) %></td>
  <td>
    <% if policy(filter).destroy? %>
      <% if filter.teams.any? %>
        <p class="btn btn-sm btn-outline-secondary float-end mb-0" title="<%= t('filters.delete_disabled_hint') %>">
          X
        </p>
      <% else %>
        <%= button_to "X", filter, method: :delete, 'data-turbo-confirm': t('scaffold.sure?'), class: 'btn btn-sm btn-outline-danger float-end' %>
      <% end %>
    <% end %>
  </td>
</tr>